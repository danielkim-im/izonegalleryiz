<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="55dp"
        app:layout_constraintTop_toTopOf="@id/cardview8"
        android:id="@+id/cardview7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/purple_gradient">

            <TextView
                android:id="@+id/ocTitleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="❤️안고독한 아이즈원❤️"
                android:textColor="@color/MyOpenChatColor"
                android:textAlignment="center"
                android:textSize="22dp"
                android:fontFamily="@font/mories"
                android:textStyle="bold"
                android:layout_marginTop="75dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/ocDescTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="아이즈원 갤러리즈 카카오톡 오픈채팅이 생겼습니다. 더욱더 원활한 소통을 위해 많은 참여 부탁드립니다."
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@id/ocTitleTxt"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:textColor="@color/Grey"
                android:textSize="13dp"/>

            <TextView
                android:id="@+id/joinOPTxtPopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오픈채팅 참여하기"
                android:textColor="@color/White"
                android:textAlignment="center"
                android:textSize="15dp"
                android:background="@drawable/button7bg"
                android:textStyle="bold"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:padding="13dp"
                app:layout_constraintTop_toBottomOf="@id/ocDescTxt"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/closeOCdialogTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="닫기"
                android:textColor="@color/Grey"
                android:textSize="13dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_margin="8dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="110dp"
        android:layout_height="110dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/cardview8">

        <ImageView
            android:id="@+id/ryanImg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>